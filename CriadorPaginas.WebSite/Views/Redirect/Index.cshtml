@model IEnumerable<Redirect.Application.DTOs.RedirecionamentoOrigemDTO>
@using System.Linq

@{
    ViewData["Title"] = "Lista de Redirecionamentos";

    // 🔹 Parâmetros de paginação
    int pageSize = 10;
    int currentPage = 1;

    var pageQuery = ViewContext.HttpContext.Request.Query["page"];
    var sizeQuery = ViewContext.HttpContext.Request.Query["pageSize"];

    if (!string.IsNullOrEmpty(sizeQuery))
        int.TryParse(sizeQuery, out pageSize);

    if (!string.IsNullOrEmpty(pageQuery))
    {
        int.TryParse(pageQuery, out currentPage);
        if (currentPage < 1)
            currentPage = 1;
    }

    int totalItems = ViewBag.Total ?? (Model?.Count() ?? 0);
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);

    var paginatedModel = Model?.OrderBy(o => o.UrlOrigem).ToList();


    int[] pageSizeOptions = new[] { 5, 10, 15, 20 };
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

<div class="container-fluid p-4 bg-light min-vh-100">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-primary mb-0">
            <i class="fa-solid fa-right-left me-2"></i> Redirecionamentos
        </h2>
        <a href="@Url.Action("Create")" class="btn btn-success shadow-sm d-flex align-items-center gap-2">
            <i class="fa-solid fa-circle-plus mx-1"></i> Novo
        </a>
    </div>

    <!-- 🔹 Seletor de quantidade de registros -->
    <div class="d-flex justify-content-end mt-4 mb-3">
        <form method="get" class="d-flex align-items-center gap-2 small">
            <label for="pageSize" class="text-secondary mb-0 mx-2">Registros por página:</label>
            <select name="pageSize" id="pageSize" class="form-select form-select-sm page-size-select" onchange="this.form.submit()">
                @{
                    foreach (var size in pageSizeOptions)
                    {
                        if (size == pageSize)
                        {
                            @:
                            <option value="@size" selected>@size</option>
                        }
                        else
                        {
                            @:
                            <option value="@size">@size</option>
                        }
                    }
                }
            </select>
            <input type="hidden" name="page" value="@currentPage" />
        </form>
    </div>

    @if (paginatedModel?.Any() == true)
    {
        <div class="table-responsive shadow-sm rounded-3 bg-white">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-uppercase text-secondary small">
                    <tr>
                        <th>URL de Origem</th>
                        <th>URL de Destino</th>
                        <th>Período Ativo</th>
                        <th>Data de Inserção</th>
                        <th>Data de Atualização</th>
                        <th>Status</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var origem in paginatedModel)
                    {
                        var destinos = origem.Destinos.OrderByDescending(d => d.DtInicial).ToList();

                        <tr class="table-primary">
                            <td class="fw-bold text-primary">@origem.UrlOrigem</td>
                            <td colspan="2"></td>
                            <td>@origem.DtRedirecionamento?.ToString("dd/MM/yyyy")</td>
                            <td>@origem.DtAtualizacao?.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (origem.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativo</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="@Url.Action("Edit", "Redirect", new { id = origem.Codigo })"
                                       class="btn btn-warning btn-sm shadow-sm mx-1" title="Editar Origem">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Redirect", new { id = origem.Codigo })"
                                       class="btn btn-danger btn-sm shadow-sm mx-1" title="Excluir Origem">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>

                        @foreach (var destino in destinos)
                        {
                            <tr>
                                <td></td>
                                <td><code class="text-success fw-bold">@destino.UrlDestino</code></td>
                                <td>
                                    @if (destino.DtInicial != null || destino.DtFinal != null)
                                    {
                                        <div class="small text-muted">
                                            @if (destino.DtInicial != null)
                                            {
                                                <div><strong>Início:</strong> @destino.DtInicial?.ToString("dd/MM/yyyy HH:mm")</div>
                                            }
                                            @if (destino.DtFinal != null)
                                            {
                                                <div><strong>Fim:</strong> @destino.DtFinal?.ToString("dd/MM/yyyy HH:mm")</div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-secondary small fst-italic">Sem período</span>
                                    }
                                </td>
                                <td colspan="2"></td>
                                <td>
                                    @if (destino.Ativo)
                                    {
                                        <span class="badge bg-success">Ativo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inativo</span>
                                    }
                                </td>
                                <td colspan="2"></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <!-- 🔹 Paginação -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mt-4 gap-3">
            <div class="text-muted small">
                Página <strong>@currentPage</strong> de <strong>@totalPages</strong> —
                Exibindo <strong>@paginatedModel.Count</strong> de <strong>@totalItems</strong> registros
            </div>
            <div class="d-flex align-items-center gap-3">
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="?page=@(currentPage - 1)&pageSize=@pageSize">Anterior</a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&pageSize=@pageSize">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" href="?page=@(currentPage + 1)&pageSize=@pageSize">Próxima</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary text-center mt-4 shadow-sm">
            Nenhum redirecionamento cadastrado.
        </div>
    }
</div>

<style>
    code {
        font-family: 'Consolas', monospace;
        font-size: 0.95rem;
    }

    table.table-hover tbody tr:hover {
        background-color: #f1f5f9;
        transition: background-color 0.2s ease-in-out;
    }

    .table-primary {
        background-color: #e7f1ff;
    }

    .btn-sm i {
        font-size: 0.85rem;
    }

    td, th {
        vertical-align: middle !important;
    }

    .table-responsive {
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .pagination .page-item.active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
        color: #fff;
    }

    /* 🔹 Estilo quadradinho e discreto */
    select.form-select-sm {
        background-color: #f8f9fa;
        border: 1px solid #ccc;
        border-radius: 0.25rem;
        padding: 3px 8px;
        font-size: 0.85rem;
        width: 70px;
    }

        select.form-select-sm:focus {
            box-shadow: none;
            border-color: #999;
        }
</style>
