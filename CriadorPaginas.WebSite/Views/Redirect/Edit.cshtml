@model Redirect.Application.DTOs.RedirecionamentoOrigemDTO

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center fw-bold">
            <h4 class="mb-0 text-capitalize">Editar Redirecionamento</h4>
        </div>

        <div class="card-body">
            <!-- ALERTA DE ERRO -->
            <div id="alertaErro" class="alert alert-danger d-none" role="alert"></div>

            <form asp-action="Edit" method="post" id="formRedirecionamento">
                <input type="hidden" asp-for="Codigo" />

                <!-- URL de Origem -->
                <div class="mb-3">
                    <label asp-for="UrlOrigem" class="form-label fw-semibold">URL de Origem</label>
                    <input asp-for="UrlOrigem" class="form-control" placeholder="/pagina-origem" />
                    <span asp-validation-for="UrlOrigem" class="text-danger"></span>
                </div>

                <!-- Lista de Destinos -->
                <div id="destinosContainer">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold text-secondary mb-0">Destinos</h5>
                        <button type="button" id="addDestino" class="btn btn-outline-primary btn-sm">
                            + Adicionar Destino
                        </button>
                    </div>

                    @if (Model.Destinos != null && Model.Destinos.Any())
                    {
                        var index = 0;
                        foreach (var destino in Model.Destinos)
                        {
                            <div class="destino border rounded p-3 mb-3 bg-light">
                                <input type="hidden" name="Destinos[@index].Codigo" value="@destino.Codigo" />
                                <input type="hidden" name="Destinos[@index].RedirecionamentoOrigemId" value="@destino.RedirecionamentoOrigemId" />

                                <div class="mb-3">
                                    <label class="form-label fw-semibold">URL de Destino</label>
                                    <input name="Destinos[@index].UrlDestino" class="form-control"
                                           value="@destino.UrlDestino" placeholder="/pagina-destino" required />
                                </div>

                                <div class="form-check mb-3">
                                    <input class="form-check-input toggle-periodo" type="checkbox" id="periodoCheck_@index"
                                           @(destino.DtInicial.HasValue ? "checked" : "")>
                                    <label class="form-check-label fw-semibold" for="periodoCheck_@index">
                                        Ativar período de validade
                                    </label>
                                </div>

                                <div class="row g-3 periodo-datas @(destino.DtInicial.HasValue ? "" : "d-none")">
                                    <div class="col-md-6">
                                        <label class="form-label fw-semibold">Data Inicial</label>
                                        <input name="Destinos[@index].DtInicial" type="datetime-local"
                                               class="form-control"
                                               value="@(destino.DtInicial.HasValue? destino.DtInicial.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty)" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-semibold">Data Final</label>
                                        <input name="Destinos[@index].DtFinal" type="datetime-local"
                                               class="form-control"
                                               value="@(destino.DtFinal.HasValue? destino.DtFinal.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty)" />
                                    </div>
                                </div>

                                <div class="mt-3 d-flex justify-content-end gap-2">
                                    <a href="@Url.Action("DeleteDestino", "Redirect", new { id = destino.Codigo })"
                                       class="btn btn-danger btn-sm" title="Excluir Destino">
                                        <i class="fa-solid fa-trash"></i> Excluir
                                    </a>
                                </div>
                            </div>

                            index++;
                        }
                    }
                    else
                    {
                        <p class="text-muted">Nenhum destino cadastrado.</p>
                    }
                </div>

                <!-- Botões principais -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 mx-1">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4 mx-1">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    h4 {
        color: #fff !important;
    }

    label {
        color: #333;
    }

    .destino {
        transition: all 0.3s ease;
    }

        .destino.removendo {
            opacity: 0;
            transform: translateX(-10px);
        }

    .alert {
        font-weight: 500;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const container = document.getElementById("destinosContainer");
        const addButton = document.getElementById("addDestino");
        const alerta = document.getElementById("alertaErro");
        const form = document.getElementById("formRedirecionamento");

        let destinoIndex = @Model.Destinos?.Count() ?? 0;

        // alternar exibição das datas
        container.addEventListener("change", function (e) {
            if (e.target.classList.contains("toggle-periodo")) {
                const datas = e.target.closest(".destino").querySelector(".periodo-datas");
                datas.classList.toggle("d-none", !e.target.checked);
            }
        });

        // adicionar destino
        addButton.addEventListener("click", function () {
            const newDestino = document.createElement("div");
            newDestino.classList.add("destino", "border", "rounded", "p-3", "mb-3", "bg-light");

            newDestino.innerHTML = `
                <div class="mb-3">
                    <label class="form-label fw-semibold">URL de Destino</label>
                    <input name="Destinos[${destinoIndex}].UrlDestino" class="form-control" placeholder="/nova-pagina" required />
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input toggle-periodo" type="checkbox" id="periodoCheck_new${destinoIndex}">
                    <label class="form-check-label fw-semibold" for="periodoCheck_new${destinoIndex}">
                        Ativar período de validade
                    </label>
                </div>

                <div class="row g-3 periodo-datas d-none">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Data Inicial</label>
                        <input name="Destinos[${destinoIndex}].DtInicial" type="datetime-local" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Data Final</label>
                        <input name="Destinos[${destinoIndex}].DtFinal" type="datetime-local" class="form-control" />
                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-outline-danger btn-sm removeDestino">Remover</button>
                </div>
            `;
            container.appendChild(newDestino);
            destinoIndex++;
        });

        // remover destino com animação
        container.addEventListener("click", function (e) {
            if (e.target.classList.contains("removeDestino")) {
                const destino = e.target.closest(".destino");
                destino.classList.add("removendo");
                setTimeout(() => destino.remove(), 300);
            }
        });

        // validação das datas antes de enviar
        form.addEventListener("submit", function (e) {
            const destinos = Array.from(container.querySelectorAll(".destino"));
            let erro = "";

            const datas = destinos.map(d => {
                const dtIni = d.querySelector('input[name*="DtInicial"]').value;
                const dtFim = d.querySelector('input[name*="DtFinal"]').value;
                return { dtIni: dtIni ? new Date(dtIni) : null, dtFim: dtFim ? new Date(dtFim) : null };
            });

            // regra 1 - data final não pode ser antes da inicial
            for (let i = 0; i < datas.length; i++) {
                const { dtIni, dtFim } = datas[i];
                if (dtIni && dtFim && dtFim < dtIni) {
                    erro = `O destino ${i + 1} possui data final anterior à data inicial.`;
                    break;
                }
            }

            // regra 2 - sobreposição de períodos
            if (!erro) {
                const ativos = datas.filter(d => d.dtIni && d.dtFim).sort((a, b) => a.dtIni - b.dtIni);
                for (let i = 0; i < ativos.length - 1; i++) {
                    if (ativos[i + 1].dtIni < ativos[i].dtFim) {
                        erro = "Os períodos de validade dos destinos não podem se sobrepor.";
                        break;
                    }
                }
            }

            if (erro) {
                e.preventDefault();
                alerta.textContent = erro;
                alerta.classList.remove("d-none");
                alerta.scrollIntoView({ behavior: "smooth", block: "start" });
                setTimeout(() => alerta.classList.add("d-none"), 6000);
            }
        });
    });
</script>
