@model Redirect.Application.DTOs.RedirectURLDTO

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center fw-bold">
            <h4 class="mb-0 text-capitalize">Editar Redirecionamento</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Codigo" />

                <!-- URL Antiga -->
                <div class="mb-3">
                    <label asp-for="UrlAntiga" class="form-label fw-semibold">URL Antiga</label>
                    <input asp-for="UrlAntiga" class="form-control" placeholder="/pagina-antiga" />
                    <span asp-validation-for="UrlAntiga" class="text-danger"></span>
                </div>

                <!-- URL Nova -->
                <div class="mb-3">
                    <label asp-for="UrlNova" class="form-label fw-semibold">URL Nova</label>
                    <input asp-for="UrlNova" class="form-control" placeholder="/nova-pagina" />
                    <span asp-validation-for="UrlNova" class="text-danger"></span>
                </div>

                <!-- Checkbox para ativar o período -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="chkPeriodo" />
                    <label class="form-check-label fw-semibold" for="chkPeriodo">
                        Selecionar período
                    </label>
                </div>

                <!-- Campos de período -->
                <div id="periodoCampos" class="row g-3" style="display: none;">
                    <div class="col-md-6">
                        <label asp-for="DtInicial" class="form-label fw-semibold">Data de Início</label>
                        <input asp-for="DtInicial" type="datetime-local" class="form-control"
                               value="@(Model.DtInicial.HasValue? Model.DtInicial.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty)" />
                        <span asp-validation-for="DtInicial" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DtFinal" class="form-label fw-semibold">Data de Fim (opcional)</label>
                        <input asp-for="DtFinal" type="datetime-local" class="form-control"
                               value="@(Model.DtFinal.HasValue? Model.DtFinal.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty)" />
                        <span asp-validation-for="DtFinal" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botões -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 mx-1">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4 mx-1">Salvar Alterações</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    h4 {
        color: #fff !important;
    }

    label {
        color: #333;
    }

    .form-check-label {
        cursor: pointer;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const chkPeriodo = document.getElementById("chkPeriodo");
        const periodoCampos = document.getElementById("periodoCampos");

        // Exibe automaticamente se já há datas preenchidas
        const temPeriodo = "@(Model.DtInicial.HasValue || Model.DtFinal.HasValue)".toLowerCase() === "true";
        if (temPeriodo) {
            chkPeriodo.checked = true;
            periodoCampos.style.display = "flex";
        }

        // Mostra/oculta conforme o usuário marca o checkbox
        chkPeriodo.addEventListener("change", function () {
            periodoCampos.style.display = this.checked ? "flex" : "none";
        });
    });
</script>
