@model Redirect.Application.DTOs.RedirecionamentoOrigemDTO

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center fw-bold">
            <h4 class="mb-0">Adicionar Redirecionamento</h4>
        </div>

        <div class="card-body">
            <!-- ⚠️ Alerta de validação -->
            <div id="alertaValidacao" class="alert alert-danger d-none" role="alert"></div>

            <form asp-action="Create" method="post">
                <!-- URL de Origem -->
                <div class="mb-4">
                    <label asp-for="UrlOrigem" class="form-label fw-semibold">URL de Origem</label>
                    <input asp-for="UrlOrigem" class="form-control" placeholder="página origem" />
                    <span asp-validation-for="UrlOrigem" class="text-danger"></span>
                </div>

                <!-- Botão adicionar destino -->
                <div class="mb-3 d-flex justify-content-end">
                    <button type="button" id="addDestino" class="btn btn-outline-primary btn-sm">
                        + Adicionar Destino
                    </button>
                </div>

                <!-- Container de destinos -->
                <div id="destinosContainer"></div>

                <!-- Botões -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 mx-1">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4 mx-1">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    h4 {
        color: #fff !important;
    }

    label {
        color: #333;
    }

    .destino {
        position: relative;
        transition: all 0.3s ease;
        margin-bottom: 1rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: .5rem;
        border: 1px solid #dee2e6;
    }

        .destino.removendo {
            opacity: 0;
            transform: translateX(-10px);
        }

    .periodo-container {
        display: none;
        margin-top: .5rem;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const container = document.getElementById("destinosContainer");
        const addButton = document.getElementById("addDestino");
        const form = document.querySelector("form");
        const alerta = document.getElementById("alertaValidacao");

        let destinoIndex = 0;

        // ➕ Adicionar destino
        addButton.addEventListener("click", function () {
            addDestino();
        });

        function addDestino() {
            const newDestino = document.createElement("div");
            newDestino.classList.add("destino");

            newDestino.innerHTML = `
                <div class="mb-2">
                    <label class="form-label fw-semibold">URL de Destino</label>
                    <input name="Destinos[${destinoIndex}].UrlDestino" class="form-control" placeholder="/nova-pagina" required />
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input periodoCheck" type="checkbox" id="periodoCheck${destinoIndex}">
                    <label class="form-check-label" for="periodoCheck${destinoIndex}">Definir período ativo</label>
                </div>

                <div class="row g-3 periodo-container" id="periodoContainer${destinoIndex}">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Data Inicial</label>
                        <input name="Destinos[${destinoIndex}].DtInicial" type="datetime-local" class="form-control dt-inicial" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Data Final</label>
                        <input name="Destinos[${destinoIndex}].DtFinal" type="datetime-local" class="form-control dt-final" />
                    </div>
                </div>

                <div class="mt-3 text-end">
                    <button type="button" class="btn btn-outline-danger btn-sm removeDestino">Remover</button>
                </div>
            `;

            container.appendChild(newDestino);

            // Mostrar período apenas se o checkbox for marcado
            const check = newDestino.querySelector(".periodoCheck");
            const periodoDiv = newDestino.querySelector(".periodo-container");
            check.addEventListener("change", function () {
                periodoDiv.style.display = check.checked ? "flex" : "none";
            });

            destinoIndex++;
        }

        // ❌ Remover destino
        container.addEventListener("click", function (e) {
            if (e.target.classList.contains("removeDestino")) {
                const destino = e.target.closest(".destino");
                destino.classList.add("removendo");
                setTimeout(() => destino.remove(), 300);
            }
        });

        // ⚠️ Mostrar alerta
        function mostrarAlerta(mensagem) {
            alerta.textContent = mensagem;
            alerta.classList.remove("d-none");
            alerta.scrollIntoView({ behavior: "smooth", block: "center" });
            setTimeout(() => alerta.classList.add("d-none"), 6000);
        }

        // ✅ Validação das datas antes de salvar
        form.addEventListener("submit", function (e) {
            const destinos = Array.from(container.querySelectorAll(".destino"));
            let erro = "";

            const destinosComDatas = destinos.map((d, i) => {
                const dtInicial = d.querySelector(".dt-inicial")?.value;
                const dtFinal = d.querySelector(".dt-final")?.value;
                return {
                    index: i + 1,
                    dtInicial: dtInicial ? new Date(dtInicial) : null,
                    dtFinal: dtFinal ? new Date(dtFinal) : null
                };
            });

            for (let i = 0; i < destinosComDatas.length; i++) {
                const atual = destinosComDatas[i];

                // Regra 1: Data Final < Data Inicial
                if (atual.dtFinal && atual.dtInicial && atual.dtFinal < atual.dtInicial) {
                    erro = `O destino ${atual.index} possui data final anterior à data inicial.`;
                    break;
                }

                // Regra 2: Data Inicial do destino atual < Data Final do destino anterior
                if (i > 0) {
                    const anterior = destinosComDatas[i - 1];
                    if (atual.dtInicial && anterior.dtFinal && atual.dtInicial < anterior.dtFinal) {
                        erro = `A data inicial do destino ${atual.index} deve ser posterior à data final do destino ${anterior.index}.`;
                        break;
                    }
                }
            }

            if (erro) {
                e.preventDefault();
                mostrarAlerta(erro);
                return false;
            }
        });
    });
</script>
