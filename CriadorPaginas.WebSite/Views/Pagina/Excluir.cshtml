@model Paginas.Application.DTOs.PaginaDTO

@{ ViewData["Title"] = "Excluir Página"; }

<h1 class="text-danger">Confirmar Exclusão</h1>

<p>Tem certeza de que deseja excluir a página abaixo?</p>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Titulo</h4>
        <dl class="row">
            <dt class="col-sm-3">URL</dt>
            <dd class="col-sm-9">@Model.Url</dd>

            <dt class="col-sm-3">Criada em</dt>
            <dd class="col-sm-9">@Model.Criacao.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@((Model.Status) ? "Ativo" : "Inativo")</dd>
        </dl>
    </div>
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Codigo" />
    <button type="submit" class="btn btn-danger">Sim, Excluir</button>
    <a asp-action="Listar" class="btn btn-secondary">Cancelar</a>
</form>
