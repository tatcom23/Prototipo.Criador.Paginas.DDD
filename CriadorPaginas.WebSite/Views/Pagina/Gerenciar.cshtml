@model Paginas.Application.DTOs.PaginaDTO
@{
    ViewData["Title"] = "Gerenciar Página";
}

<h1 class="mb-3">Página: @Model.Titulo</h1>

<div class="mb-3">
    <a asp-action="Listar" class="btn btn-outline-secondary">← Voltar à lista</a>
</div>

<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">
        <strong>Página:</strong> @Model.Titulo
    </div>
    <div class="card-body">

        <!-- Descrição e Banner -->
        <div class="mb-3 border rounded p-3 shadow-sm">
            <p><strong>Descrição:</strong></p>
            <div class="border rounded p-3 mb-3">
                @Html.Raw(Model.Conteudo)
            </div>

            <p><strong>URL de acesso:</strong> @Model.Url</p>

            @if (!string.IsNullOrEmpty(Model.Banner))
            {
                <p><strong>Banner principal:</strong></p>
                <img src="@Model.Banner" class="img-fluid rounded mb-2" style="max-height:100px;" />
            }

            <div class="mt-3 d-flex gap-2 flex-wrap">
                <a asp-action="Editar" asp-route-id="@Model.Codigo" class="btn btn-sm btn-warning mx-1">Editar</a>
                <a asp-action="Excluir" asp-route-id="@Model.Codigo" class="btn btn-sm btn-danger mx-1">Excluir</a>
                <a asp-action="Exibir" asp-route-id="@Model.Url" class="btn btn-sm btn-success mx-1" target="_blank">Exibir</a>
            </div>
        </div>

        <!-- BOTÕES -->
        <h5>Botões de navegação</h5>
        @if (Model.Botoes?.Any() == true)
        {
            var botoesOrdenados = Model.Botoes.OrderBy(b => b.Ordem).ToList();

            <ul class="list-unstyled">
                @for (int i = 0; i < botoesOrdenados.Count; i++)
                {
                    var botao = botoesOrdenados[i];
                    <li class="mb-2 border rounded p-2 shadow-sm d-flex justify-content-between">
                        <div>
                            <strong>@botao.Nome</strong> → <a href="@botao.Link" target="_blank">@botao.Link</a>
                            <small class="text-muted">(Ordem: @botao.Ordem)</small>
                        </div>

                        <div class="d-flex gap-1">
                            @if (i > 0)
                            {
                                <form asp-action="AtualizarOrdem" asp-controller="Botao" method="post">
                                    <input type="hidden" name="idA" value="@botao.Codigo" />
                                    <input type="hidden" name="idB" value="@botoesOrdenados[i - 1].Codigo" />
                                    <input type="hidden" name="paginaId" value="@Model.Codigo" />
                                    <button class="btn btn-sm btn-outline-secondary">🔼</button>
                                </form>
                            }
                            @if (i < botoesOrdenados.Count - 1)
                            {
                                <form asp-action="AtualizarOrdem" asp-controller="Botao" method="post">
                                    <input type="hidden" name="idA" value="@botao.Codigo" />
                                    <input type="hidden" name="idB" value="@botoesOrdenados[i + 1].Codigo" />
                                    <input type="hidden" name="paginaId" value="@Model.Codigo" />
                                    <button class="btn btn-sm btn-outline-secondary">🔽</button>
                                </form>
                            }

                            <a asp-controller="Botao" asp-action="Editar" asp-route-id="@botao.Codigo" class="btn btn-sm btn-outline-warning">✏️</a>
                            <a asp-controller="Botao" asp-action="Excluir" asp-route-id="@botao.Codigo" class="btn btn-sm btn-outline-danger">🗑️</a>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p><em>Sem botões.</em></p>
        }

        <!-- CARROSSEIS -->
        <h5 class="mt-4">Carrosséis</h5>

        @if (Model.Carrosseis?.Any() == true)
        {
            foreach (var carrossel in Model.Carrosseis)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-secondary text-white d-flex justify-content-between">
                        <strong>@carrossel.Titulo</strong>

                        <div>
                            <a asp-controller="Carrossel" asp-action="Editar" asp-route-id="@carrossel.Codigo" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-controller="Carrossel" asp-action="Excluir" asp-route-id="@carrossel.Codigo" class="btn btn-sm btn-danger">Excluir</a>
                            <a asp-controller="Carrossel" asp-action="OrdenarImagens" asp-route-id="@carrossel.Codigo" class="btn btn-sm btn-info">Ordenar imagens</a>
                        </div>
                    </div>

                    <div class="card-body">

                        @if (carrossel.Imagens?.Any() == true)
                        {
                            <div class="row g-3">
                                @foreach (var img in carrossel.Imagens)
                                {
                                    <div class="col-6 col-md-4 col-lg-3">
                                        <div class="border rounded p-2 shadow-sm text-center">

                                            <img src="@img.UrlImagem" class="img-fluid rounded mb-2" style="max-height:150px; object-fit:cover;" />

                                            <div>
                                                <small>@img.Titulo</small>
                                            </div>

                                            <a asp-controller="Carrossel" asp-action="ExcluirImagem" asp-route-id="@img.Codigo"
                                               class="btn btn-sm btn-outline-danger mt-2">Excluir imagem</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p><em>Sem imagens neste carrossel.</em></p>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p><em>Sem carrosséis.</em></p>
        }

        <!-- TÓPICOS  (mantido igual ao seu) -->
        <h5 class="mt-4">Tópicos</h5>
        @* ... sua parte dos tópicos permanece, não alterei ... *@

    </div>
</div>
