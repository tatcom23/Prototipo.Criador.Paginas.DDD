@model Paginas.Application.DTOs.BotaoDTO

@{ ViewData["Title"] = "Excluir Botão"; }

<h2 class="text-danger">@ViewData["Title"]</h2>

<p>Tem certeza de que deseja excluir o botão abaixo?</p>

<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Nome</h4>
        <dl class="row">
            <dt class="col-sm-3">Link</dt>
            <dd class="col-sm-9"><a href="@Model.Link" target="_blank">@Model.Link</a></dd>

            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">@((Paginas.Domain.Enums.TipoBotao)Model.Tipo)</dd>

            <dt class="col-sm-3">Linha</dt>
            <dd class="col-sm-9">@Model.Linha</dd>

            <dt class="col-sm-3">Coluna</dt>
            <dd class="col-sm-9">@Model.Coluna</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@((Model.Status) ? "Ativo" : "Inativo")</dd>

            <dt class="col-sm-3">Criado em</dt>
            <dd class="col-sm-9">@Model.Criacao.ToString("dd/MM/yyyy HH:mm")</dd>

            @if (Model.Atualizacao.HasValue)
            {
<dt class="col-sm-3">Atualizado em</dt>
                <dd class="col-sm-9">@Model.Atualizacao.Value.ToString("dd/MM/yyyy HH:mm")</dd>            }
        </dl>
    </div>
</div>

<form asp-action="Excluir" asp-route-id="@Model.Codigo" method="post">
    <button type="submit" class="btn btn-danger">Sim, Excluir</button>
    <a asp-action="Detalhes" asp-controller="Pagina" asp-route-id="@Model.CdPaginaIntrodutoria" class="btn btn-secondary">Cancelar</a>
</form>
