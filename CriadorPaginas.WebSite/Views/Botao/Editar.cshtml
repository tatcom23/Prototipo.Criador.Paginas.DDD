@model Paginas.Application.DTOs.BotaoDTO

@{ ViewData["Title"] = "Editar Botão"; }

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" asp-route-id="@Model.Codigo" method="post">
    <input type="hidden" asp-for="CdPaginaIntrodutoria" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Link" class="form-label"></label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Detalhes" asp-controller="Pagina" asp-route-id="@Model.CdPaginaIntrodutoria" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
